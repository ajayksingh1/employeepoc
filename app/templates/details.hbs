<form class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-2" for="Name">Name:</label>
    <div class="col-sm-8">
      {{input type="email" class="form-control" id="Name" placeholder="Enter Name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="id">ID:</label>
    <div class="col-sm-8"> 
      {{input type="password" class="form-control" id="id" placeholder="Enter ID"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="dept">Department:</label>
    <div class="col-sm-8"> 
       {{input type="password" class="form-control" id="dept" placeholder="Enter Department"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="dob">Date of Birth:</label>
    <div class="col-sm-8"> 
      {{input type="password" class="form-control" id="dob" placeholder="Date of Birth"}}
    </div>
  </div>
    <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update</button>
    </div>
  </div>
</form>
